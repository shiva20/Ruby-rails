
<% if notice %>
 <p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
  <% @products.each do |product| %>
<div class="entry">
 <%= image_tag(product.image_url) %>
 <h3><%= product.title %></h3>
 
<div class="price_line">
	<%= sanitize(product.description) %></br>
	<span class="price"><%= product.price %></span> </div>
</div>
<% end %>