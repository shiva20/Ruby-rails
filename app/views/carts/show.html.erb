<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2> 
<table>
<% @cart.line_items.each do |item| %>
 <tr>
	 <td><%= item.quantity %>&times;<%= item.Product.title %></td>
	 
</tr> <% end %>

	<tr class="total_line">
		<td colspan="2">Total</td>
  	</tr>
</table>


<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
